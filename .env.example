### Variáveis obrigatórias
# Token do bot no Discord
DISCORD_TOKEN=seu_token_do_bot

# ID do aplicativo (client id) do Discord
CLIENT_ID=seu_client_id

# Chave da API do Groq
GROQ_API_KEY=sua_chave_groq

# Firebase Service Account
FIREBASE_PROJECT_ID=seu_project_id
FIREBASE_CLIENT_EMAIL=service-account@project.iam.gserviceaccount.com
# Use \n para quebras de linha na chave privada
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

### Variáveis opcionais
# URL do Redis (se quiser habilitar cache externo)
REDIS_URL=redis://usuario:senha@host:6379/0

# Nome do host (exibição)
HOST_NAME=Discloud

# URL de votação do bot
VOTE_URL=https://top.gg/

# Thumbnail global para embeds (opcional)
BOT_THUMBNAIL_URL=https://exemplo.com/thumb.png

### Desenvolvimento (quando `npm run dev`)
# Token do bot de desenvolvimento
DEV_BOT_TOKEN=seu_token_do_bot_dev
# ID do aplicativo do bot de desenvolvimento
DEV_BOT_ID=seu_client_id_dev
# ID do servidor onde os comandos serão registrados em dev
DEV_SERVER=seu_guild_id_dev
